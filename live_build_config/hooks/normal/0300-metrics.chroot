#!/usr/bin/env bash

. /usr/local/lib/cephos/systemd.sh.lib
verbose=1

set -e

manage_systemd_unit_state "disable" "prometheus-node-exporter.service"
manage_systemd_unit_state "disable" "telegraf.service"
manage_systemd_unit_state "disable" "ceph-exporter.service"
manage_systemd_unit_state "disable" "smartctl-exporter.service"

rm -rf /var/log/telegraf /etc/init.d/telegraf
usermod -aG ceph telegraf
