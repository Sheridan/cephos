#!/usr/bin/env bash

. /usr/local/lib/cephos/systemd.sh.lib
verbose=1

set -e

function systemd_units()
{
  echo "cephos-mds-manager.service"
  echo "radosgw.service"
  {
    systemctl list-units
    systemctl list-unit-files
  }  | awk '{print $1}' | grep -E '^ceph-.*\.service$' | sort -u
}

for unit in $(systemd_units)
do
  manage_systemd_unit_state "disable" "${unit}"
done

for dr in "/etc/ceph" "/var/lib/ceph" "/var/log/ceph" "/var/run/ceph"
do
  rm -rf ${dr}/*
done
