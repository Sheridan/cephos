#!/usr/bin/env bash

. /usr/local/lib/cephos/ssh.sh.lib
. /usr/local/lib/cephos/cephos.sh.lib

read -r -d '' help_text <<EOF
Shutdown whole cluster

Options:
  -h  Show this help message and exit
  -v  Enable verbose mode
EOF
set -euo pipefail
# --- functions ---
function shutdown_nodes()
{
  log_info "Shutdown all other nodes..."
  mapfile -t ceph_hosts < <(get_ceph_hosts)
  for line in "${ceph_hosts[@]}"
  do
    read -r node_name public_ip cluster_ip <<< "${line}"
    if ! is_local_host "${node_name}"
    then
      exec_ssh_cephos "${public_ip}" "sudo poweroff"
    fi
  done
}
# --- functions ---
# --- options parse ---
while getopts ":hv" opt
do
  case ${opt} in
    h) usage     ;;
    v) verbose=1 ;;
   \?) wrong_opt "Unknown option -${OPTARG}"              ;;
    :) wrong_opt "Option -${OPTARG} requires an argument" ;;
  esac
done
# --- options parse ---
# --- main ---
check_user "${build_user}"
ask_confirmation "This script will shut down all Ceph cluster nodes. Continue?"

shutdown_nodes
log_info "Shutdown self"
sudo poweroff
